#include <Servo.h>Servo myservo1;Servo myservo2;String incomingByte;int servoNumber;int position;void setup() { Serial.begin(9600); myservo1.attach(2);  myservo2.attach(3);  servoCall(servo1, 1, 90); servoCall(servo2, 1, 0);}void loop() {  if (Serial.available()) {    incomingByte = Serial.read();       position = incomingByte.toInt();    position = map(position, 49, 51, 70, 30);    position = constrain(position, 30, 70);         servoCall(servo1, 1, position);    delay(2000);    servoCall(servo2, 2, 90);    delay(2000);    servoCall(servo2, 2, 0);    delay(2000);  }}void servoCall(Servo Sobject, int Snumber, int Sposition) {  Sobject.write(Sposition);   Serial.print("  Servo: ");  Serial.print(Snumber);  Serial.print("  Position: ");  Serial.println(Sposition); }